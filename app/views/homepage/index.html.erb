<h1>Welcome to The Get Things Done App.</h1>

</br>
</br>
</br>

<%= form_with(url: "/thoughts", method: "post") do %>
  <%= label_tag(:q, "Write 3 or more things on your mind now.") %>
  </br>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Submit") %>
<% end %>

<table>
  <thead>
  <tr>
    <th>My Thoughts</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  </br>
  <tbody>
  <% @thoughts.each do |thought| %>
    <tr>
      <td><%= thought.description %></td>
      <td><%= link_to 'Show', thought %></td>
      <td><%= link_to 'Edit', edit_thought_path(thought) %></td>
      <td><%= link_to 'Destroy', thought, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<table>
  <thead>
  <tr>
    <th>My Tasks</th>
    <th colspan="1">Priority</th>
  </tr>
  </thead>

  </br>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.description %></td>
      <td><%= task.priority %></td>
    </tr>
  <% end %>
  </tbody>
</table>