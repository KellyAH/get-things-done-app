<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Welcome to The Get Things Done App.</h1>

</br>
<%= form_with model: @new_thought do |form| %>
  <%= form.text_field :description %>
  <%= form.button "Create" %>
<% end %>

<table>
  <thead>
  <tr>
    <th>My Thoughts</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  </br>
  <tbody>
  <% @thoughts.each do |thought| %>
    <tr>
      <td><%= thought.description %></td>
      <td><%= link_to 'Show', thought %></td>
      <td><%= link_to 'Edit', edit_thought_path(thought) %></td>
      <td><%= link_to 'Destroy', thought, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Turn into a Task', new_task_path(thought_id: thought.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<table>
  <thead>
  <tr>
    <th>My Tasks</th>
    <th colspan="1">Priority</th>
  </tr>
  </thead>

  </br>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.description %></td>
      <td><%= task.priority %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>